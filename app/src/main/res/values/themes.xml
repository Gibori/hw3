        <item name="windowSplashScreenAnimatedIcon">@drawable/avd_anim</item>
        <item name="postSplashScreenTheme">@style/MyTheme</item>
    </style>
    <style name="Base.Theme.Hw3" parent="Theme.MaterialComponents.Light.NoActionBar">
